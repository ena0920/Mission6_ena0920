@{
    ViewData["Title"] = "The Joel Hilton Film Collection: Enter a Movie";
}

@model Mission6_ena0920.Models.ApplicationResponse 

<h1>The Joel Hilton Film Collection</h1>
<h3>invites you to enter a movie into his database</h3>

<div>
    <form method="post">
       <div asp-validation-summary="All"></div>


        <label asp-for="CategoryID">Category: </label>
        <select asp-for="CategoryID">
            <option value="">
                Select a Category
            </option>
            @foreach (Category c in ViewBag.Category)
            {
                <option value= "@c.CategoryID">@c.CategoryName</option>
            }
        </select><br />
        <label asp-for="Title">Title: </label>
        <input asp-for="Title" /><br />
        <label asp-for="Year">Year: </label>
        <input asp-for="Year" /><br />
        <label asp-for="Director">Director: </label>
        <input asp-for="Director" /><br />
        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />
        <label asp-for="Edited">Edited: </label><br />
        <select asp-for="Edited">
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select><br />
        <label asp-for="LentTo">Lent To: </label>
        <input asp-for="LentTo" /><br />
        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" maxlength="25"/><br />

        <button type="submit">Submit</button>
    </form>
</div>
