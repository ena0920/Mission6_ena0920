
@{
    ViewData["Title"] = "Delete";
}

@model ApplicationResponse

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the entry for @Model.Title?</h3>

<form asp-action="Delete" method="post">
    <button type="submit">
        Delete
    </button>
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-primary">
       Cancel
    </a>

    <input type="hidden" asp-for="ApplicationID" />
</form>